
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div class="login">
	<div class="login-grids">
		<div class="col-md-6 log">
			<h3>Login</h3>
			<p>Welcome, please enter the following to continue.</p>
			<form method="post">
				<h5>UserName:</h5>
				<input type="text" name="WriterMail" value="">
				<h5>Password:</h5>
				<input type="password" name="WriterPassword" value="">
				<input type="submit" value="Login"> 

			</form>
			<a href="/Register/Index/" class="hvr-bounce-to-bottom button">Create An Account</a>
		</div>
		<div class="clearfix"></div>
	</div>
</div>